@import 'nib'
.container
  margin-top 60px

h2
  smooth-button()
  width: 90%
  font-size: 2em

h3
  margin-top: 20px
pre
  font-family: courier
  background-color: rgba(0,0,0,.8)
  color: yellow
  width: 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black

#game-title
  display: block
  text-align: center
  float: none

#canvas-container
  width: 1280px
  padding: 0
  background-color: white

.overlay
  position: fixed
  left: 0
  top: 0
  background-color #000
  opacity: 0.5
  width: 100%
  height: 100%

#overlay-container
  margin: 0 0 0 -150px
  height: 100%
  width: 300px
  position: absolute
  top: 30%
  left: 50%

#enter-name
  background: none

#player-container
  margin-top: 20px

.player-icon
  line-height: normal
  font-size: 40px
  margin: 0 2px 0 2px
  padding: 5px
  color: #2ECC71
  border: 3px solid #2ECC71
  border-radius: 10px
  transition: color 0.5s, border-color 0.5s
  &:hover
    color: #ECF0F1
    border-color: #ECF0F1

.player-me
  color: #E67E22
  border: 3px solid #E67E22

#start-game-btn
  margin-top: 60px
